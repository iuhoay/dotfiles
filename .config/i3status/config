general {
        output_format = "i3bar"
        colors = true
        markup = pango
        interval = 5

        color_good = "#50FA7B"
        color_degraded = "#F1FA8C"
        color_bad = "#FF5555"
}

order += "disk /"
order += "ethernet eno1"
order += "wireless wlan0"
order += "battery all"
order += "load"
order += "memory"
order += "cpu_usage"
order += "volume master"
order += "tztime PST"
order += "tztime local"

